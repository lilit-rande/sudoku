<?php

$rows = array();
$cols = array();
$square = array();

$grid = array();
$gridTpl = array();

for ($i = 1; $i <= 9; $i++) {

   if ($i <= 3) {
    $square[$i] = array();
  }

  for ($j = 1; $j <= 9; $j++) {

    // fill rows and cols
    $rows[$i][$j] = $j;
    $cols[$i][$j] = $j;
    $grid[$i][$j] = $j;

    if ($i <= 3 && $j <= 3) {
      $square[$i][$j] = array();

      for ($k = 1; $k <= 9; $k++) {
        $square[$i][$j][$k] = $k;
      }
    }

    $gridTpl[] = '-';
    $gridTpl[] = $j;
    $gridTpl[] = '-';
  }

  $gridTpl[] = '<br>';
}

for ($i = 1; $i <= 9; $i++) {
  for ($j = 1; $j <= 9; $j++) {

    $possibilities = range(1,9);
    if (isset($rows[$i][$j])) {

    }

  }
}


echo '<pre>';
var_export($rows);
echo '<hr>';
var_export($cols);
echo '<hr>';
var_export($square);
echo '</pre>';

$gridTpl[] = '<hr><hr><hr>';

